{
  "manifest_version": 3,
  "name": "Roll20Pixels",
  "version": "1.0.0",
  "description": "Let's roll!",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://app.roll20.net/*"
  ],
  "background": {
    "service_worker": "/js/background.js"
  },
  "action": {
    "default_popup": "/html/popup.html",
    "default_icon": {
      "32": "images/d20.png"
    }
  },
  "icons": {
    "32": "images/d20.png"
  }
}
