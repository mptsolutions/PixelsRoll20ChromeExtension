{
  "name": "Pixels on Roll20",
  "version": "0.3",
  "description": "Bring the magic of Pixels into Roll20!",
  "permissions": ["activeTab", "storage", "declarativeContent", "scripting"],
  "background": {
    "service_worker": "/js/background.js"
  },
  "action": {
    "default_popup": "/html/popup.html",
    "default_icon": {
      "64": "images/logo-64.png"
    }
  },
  "icons": {
    "64": "images/logo-64.png"
  },
  "options_page": "/html/options.html",
  "manifest_version": 3,
  "content_scripts": [
    {
      "css":["/css/jquery-ui.css"],
      "js":["/js/jquery-ui.min.js"],
      "matches": ["*://*/*"],
      "run_at": "document_end"
    }
  ]
}
