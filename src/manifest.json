{
    "manifest_version": 3,
    "name": "Roll20Pixels",
    "version": "1.0.2",
    "description": "Let's roll!",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://app.roll20.net/*"
    ],
    "background": {
        "service_worker": "/js/background.js"
    },
    "action": {},
    "icons": {
        "32": "images/d20.png"
    }
}
